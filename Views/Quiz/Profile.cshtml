@model QuizDishtv.Models.ResultViewModel

@{
    ViewData["Title"] = "User Profile";
    // int total = (int)TempData["Total"];

}

<div class="container mt-4">
    <h2 class="mb-4">User Profile</h2>

    <div class="card mb-4">
        <div class="card-body">
            <p><strong>Username:</strong> @Model.Username</p>
            <p><strong>Email:</strong> @Model.Email</p>
        </div>
    </div>

    <h4 class="mb-3">Quiz Attempts</h4>

    @if (Model.QuizScores != null && Model.QuizScores.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quiz Category</th>
                    <th>Score</th>
                    <th>Attempted On</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quiz in Model.QuizScores)
                {
                    <tr>
                        <td>@quiz.QuizTitle</td>
                        <td>@quiz.Score</td>
                        <td>@quiz.AttemptedOn.ToString("yyyy-MM-dd hh:mm tt")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No quiz attempts found.</p>
    }
</div>

