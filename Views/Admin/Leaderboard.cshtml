@model List<LeaderboardViewModel>
@{
    ViewBag.Title = "Leaderboard";
}


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Username</th>
            <th>Quiz Category</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Rank</td>
                <td>@item.Username</td>
                <td>@item.CategoryName</td>
                <td>@item.Score</td>
            </tr>
        }
    </tbody>
</table>